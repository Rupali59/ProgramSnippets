# Coding round - Uber
# Problem Statement - Count the max range till which cars are available given the coordinates on which the cars are available


import math
import os
import random
import re
import sys

def easyCount(n, coordinates):
    markers = []
    for i in range(n):
        [A,B] = coordinates[i]
        for j in range(A,B+1):
            markers.append(j)

    return len(set(markers))

